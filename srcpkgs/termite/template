version=10
revision=1
_util_commit=62faf9e46b8c4ab213ac42aaf6343dea9e2dfc1e
wrksrc=sources
create_wrksrc=yes
build_wrksrc=${pkgname}-${version}
build_style=gnu-makefile
make_build_args="VERSION=${version}"
hostmakedepends="pkg-config"
makedepends="vte3-devel"
