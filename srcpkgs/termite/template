maintainer="beefcurtains <beefcurtains@users.noreply.github.com>"
license="GPL-2"
homepage="https://github.com/thestinger/termite"
distfiles="
 ${homepage}/archive/v${version}.tar.gz
 ${homepage%/*}/util/archive/${_util_commit}.tar.gz
"
checksum="
 c15e23c41cbf0b2d8c1fa3aa6fb6618212af9a86fc466a91d0bb058a9326e4ef
